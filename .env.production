# =============================================================================
# Configuration PRODUCTION pour Le Mixologue Augmenté
# =============================================================================
# ⚠️  VALEURS À REMPLIR POUR LA PRODUCTION !
# ⚠️  NE JAMAIS COMMITER CE FICHIER AVEC VOS VRAIES VALEURS !

# Django Core Settings
SECRET_KEY=YOUR_PRODUCTION_SECRET_KEY_HERE_GENERATE_A_NEW_ONE
DEBUG=False

# Security Settings - ADAPTER À VOTRE DOMAINE
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-ip-address
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# JWT Configuration - Plus restrictif en production
JWT_ACCESS_TOKEN_MINUTES=10
JWT_REFRESH_TOKEN_HOURS=1
JWT_ROTATE_REFRESH_TOKENS=True
JWT_BLACKLIST_AFTER_ROTATION=True

# Session Configuration - Plus sécurisé en production
SESSION_COOKIE_AGE=900
SESSION_EXPIRE_AT_BROWSER_CLOSE=True
SESSION_SAVE_EVERY_REQUEST=True
SESSION_COOKIE_HTTPONLY=True

# IA Configuration - Production
AI_SERVICE_TYPE=ollama
OLLAMA_MODEL=llama3.1
OLLAMA_BASE_URL=http://your-ollama-server:11434

# Base de données PostgreSQL pour production
DATABASE_URL=postgresql://username:password@localhost:5432/cocktailaiser_prod
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=cocktailaiser_prod
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Logging Configuration
LOG_LEVEL=WARNING
COCKTAILS_LOG_LEVEL=INFO

# Media & Static pour production (ex: AWS S3)
# MEDIA_URL=https://your-bucket.s3.amazonaws.com/media/
# STATIC_URL=https://your-bucket.s3.amazonaws.com/static/
# AWS_STORAGE_BUCKET_NAME=your-production-bucket
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_S3_REGION_NAME=eu-west-3

